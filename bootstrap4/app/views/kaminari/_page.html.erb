<% if page.current? %>
  <li class='page-item active'>
    <%= content_tag :a, page, rel: (page.next? ? 'next' : (page.prev? ? 'prev' : nil)),
        class: 'page-link', remote: remote %>
  </li>
<% else %>
  <li class="page-item">
    <%= link_to page, url, rel: (page.next? ? 'next' : (page.prev? ? 'prev' : nil)),
        class: 'page-link', remote: remote %>
  </li>
<% end %>
